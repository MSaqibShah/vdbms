# HTTP (Port 80) Configuration to Redirect to HTTPS
server {
    listen 80;
    server_name psd.smartassets.ae;

    # Redirect all HTTP traffic to HTTPS
    return 301 https://$host$request_uri;
}

# HTTPS (Port 443) Configuration for Frontend and Backend
server {
    listen 443 ssl;
    server_name psd.smartassets.ae;

    # SSL Certificate managed by Certbot
    ssl_certificate /etc/letsencrypt/live/psd.smartassets.ae/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/psd.smartassets.ae/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

 # Proxy WebSocket connections
    location /socket.io/ {
        proxy_pass http://localhost:5000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
    }
    # Increase timeout settings for large uploads or long requests
    client_max_body_size 100M;
    proxy_connect_timeout 600;
    proxy_send_timeout 600;
    proxy_read_timeout 600;
    send_timeout 600;
   # Serve the React frontend build folder
    location / {
        root /var/www/html;  # Path to your frontend build folder
        index index.html;
        try_files $uri /index.html;  # Important for Single Page Apps (SPA)
    }

    # Forward API requests to the backend server running on port 5000
    location /api/ {
        proxy_pass http://127.0.0.1:5000;  # API requests forwarded to backend
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    location /videos/ {
        proxy_pass http://127.0.0.1:5000/videos/;
    }


}